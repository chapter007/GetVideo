<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhangjie.getvideo" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/getvideo"
        android:label="@string/app_name"
        android:theme="@style/Theme.App.Blue" >

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VideoSite"
            android:theme="@style/Theme.App.Red">
        </activity>
        <activity android:name=".DownLoad">
        </activity>
        <activity android:name=".Setting"/>
        <activity android:name=".About"/>
        <activity android:name=".SiteNoJs"
            android:theme="@style/Theme.App.Red"/>
    </application>

</manifest>
